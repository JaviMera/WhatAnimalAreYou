<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_activated="false">
        <layer-list>
            <item
                android:left="20dp"
                android:top="20dp"
                android:bottom="15dp">
                <rotate
                    android:fromDegrees="25">
                    <shape android:shape="oval">
                        <solid android:color="@color/plain_white" />
                    </shape>
                </rotate>
            </item>
            <item
                android:bottom="5dp"
                android:top="5dp">
                <shape android:shape="oval">
                    <solid android:color="@color/plain_white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>